{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",

        "rootDir": "./src",
        "outDir": "dist",

        "strict": true,
        "noImplicitAny": false
    },
    "include": ["./src/*.ts"],
    "exclude": ["node_modules"]
}
